<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="420.0" prefWidth="750.0" styleClass="login_container" stylesheets="@Styles/loginLightMode.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankproject_fx.controllers.LoginController">
    <children>
        <Pane layoutY="-1.0" prefHeight="429.0" prefWidth="139.0" styleClass="login_container_secondary" />
        <PasswordField fx:id="passwordField" alignment="BASELINE_LEFT" layoutX="399.0" layoutY="159.0" prefHeight="35.0" prefWidth="290.0" promptText="Password:">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
        <Button fx:id="signInButton" layoutX="399.0" layoutY="244.0" mnemonicParsing="false" onMouseClicked="#signInUser" prefHeight="35.0" prefWidth="139.0" styleClass="login_container_buttons" text="Sign in" textOverrun="LEADING_ELLIPSIS">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
        <Button fx:id="signUpButton" layoutX="558.0" layoutY="244.0" mnemonicParsing="false" onMouseClicked="#signUpUser" prefHeight="35.0" prefWidth="131.0" styleClass="login_container_buttons" text="Sign Up" textOverrun="LEADING_ELLIPSIS">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
        <TextField fx:id="loginField" layoutX="399.0" layoutY="112.0" prefHeight="35.0" prefWidth="290.0" promptText="Login: ">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Label fx:id="errorLabel" layoutX="399.0" layoutY="206.0" textFill="#9a1a04">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
