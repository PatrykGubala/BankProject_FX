<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankproject_fx.controllers.ClientMainPageController">
   <children>
      <VBox layoutX="386.0" layoutY="14.0" prefHeight="200.0" prefWidth="250.0" styleClass="new_trans_container">
         <children>
            <Label text="Wybór karty:" />
            <ComboBox fx:id="cardChoiceComboBox" onMouseClicked="#onChoiceCardComboBoxClicked" prefHeight="25.0" prefWidth="252.0" />
            <Label text="Nr konta odbiorcy:" />
            <TextField fx:id="accountAdressNumber" />
            <Label text="Kwota:" />
            <HBox prefHeight="33.0" prefWidth="250.0">
               <children>
                  <TextField fx:id="amountField" prefHeight="25.0" prefWidth="275.0" />
                  <ChoiceBox fx:id="currencyChoiceField" onMouseClicked="#onChoiceCurrencyComboBoxClicked" prefWidth="150.0" />
               </children>
            </HBox>
            <Label text="Wiadomość:" />
            <TextArea fx:id="messageField" prefHeight="25.0" prefWidth="279.0" />
            <Button fx:id="sendMoneyButton" mnemonicParsing="false" onMouseClicked="#onSendButtonClicked" text="Wyślij" />
         </children>
      </VBox>
      <VBox layoutX="24.0" layoutY="24.0" prefHeight="273.0" prefWidth="198.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="HI, " />
                  <Label fx:id="hiLabel" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Name: " />
                  <Label fx:id="nameLabel" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Money:" />
                  <Label fx:id="moneyLabel" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Email:" />
                  <Label fx:id="emailLabel" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="386.0" layoutY="334.0" prefHeight="68.0" prefWidth="250.0">
         <children>
            <HBox prefHeight="35.0" prefWidth="250.0">
               <children>
                  <TextField fx:id="amountAddCardField" prefHeight="25.0" prefWidth="275.0" />
                  <ChoiceBox fx:id="currencyChoiceAddCardField" onMouseClicked="#onChoiceCurrencyComboBoxClicked" prefWidth="150.0" />
               </children>
            </HBox>
            <Button fx:id="addCardButton" mnemonicParsing="false" onMouseClicked="#onAddCardButtonClicked" prefHeight="25.0" prefWidth="289.0" text="Dodaj kartę" />
         </children>
      </VBox>
   </children>
</AnchorPane>
