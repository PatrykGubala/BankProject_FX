<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankproject_fx.controllers.YourCardsPageController">
   <children>
      <ListView fx:id="cardsListView" layoutX="25.0" layoutY="22.0" nodeOrientation="LEFT_TO_RIGHT" orientation="HORIZONTAL" prefHeight="200.0" prefWidth="600.0" />
      <VBox layoutX="25.0" layoutY="244.0" prefHeight="331.0" prefWidth="246.0">
         <children>
            <Label text="Wybór karty:" />
            <ComboBox fx:id="cardChoiceComboBox" onMouseClicked="#onChoiceCardComboBoxClicked" prefHeight="25.0" prefWidth="265.0" />
            <Label text="Nr konta odbiorcy:" />
            <TextField fx:id="accountAdressNumber" />
            <Label text="Kwota:" />
            <HBox prefHeight="23.0" prefWidth="246.0">
               <children>
                  <TextField fx:id="amountField" prefHeight="25.0" prefWidth="225.0" />
                  <Label fx:id="currencyId" />
               </children>
            </HBox>
            <Label text="Wiadomość:" />
            <TextArea fx:id="messageField" prefHeight="25.0" prefWidth="279.0" />
            <Button fx:id="sendMoneyButton" mnemonicParsing="false" onMouseClicked="#onSendButtonClicked" prefHeight="25.0" prefWidth="256.0" text="Wyślij" />
         </children>
      </VBox>
   </children>
</AnchorPane>
